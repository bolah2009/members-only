<header>
  <h1>All Posts</h1>
</header>
<main>
    <ol id="posts">
        <% @posts.each do |post| %>
        <li>
        <h2 ><%=post.title%></h2>
        <p><%=post.body%></p>
        <% if logged_in? %>
            <p><strong>Author: </strong><%=post.user.name%></p>
        <% end %>
        </li>
        <% end %>
    </ol>
    <br>
</main>
<footer>
  <% if logged_in? %>
    <span><%= link_to "Log out", logout_path, method: :delete %> </span>
    <span><%= link_to "Create a New Post", new_post_path%></span>
  <% else %>
    <span><%= link_to "Log in", login_path %> </span> 
  <% end %>
</footer>