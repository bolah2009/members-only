<header>
  <h1>Log in</h1>
</header>
<main>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email %><br />
    </div>
    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password %><br />
    </div>

      <%= f.submit "Log in"%>
    <% end %>
  </div>
</div>
</main>
<footer> 
 <span><%= link_to "Show all Posts", posts_path%></span>
</footer>
